		<script type="text/javascript">
		  var xmlHttp;
		  function test1(){
		      var username;
		      var pwd;
		      var repwd;
		      username=document.getElementById("user").value;
		      pwd=document.getElementById("pwd").value;
		      newpwd=document.getElementById("newpwd").value;
		      renewpwd=document.getElementById("renewpwd").value;
		      if (username.length==0){
		          alert("Please input your username");
		          return;
		      }
		      if (newpwd.length<6){
			  alert("Password length can not less than 6!");
			  return;
		      }
                      if (newpwd!=renewpwd){
			  alert("Password and Repeat-Password are different!");
			  return;
		      }
		
		      $.ajax({
				       url: "http://www.sjtuimap.com/Interface/change.php" + "?username=" + username + "&pwd=" + pwd + "&newpwd=" + repwd + "&renewpwd=" + renewpwd,
				       type: 'GET',
				       success: function(data){
                                           if (data["info"]=="Change Successful!"){
                                              alert(data["info"]);
                                              window.location.href='http://www.sjtuimap.com/chat.html';
                                           } else {
                                              alert(data["info"]);
                                           }
				       }
		      });
		  }

					  </script>

